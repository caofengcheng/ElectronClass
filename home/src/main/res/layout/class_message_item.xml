<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1010dp"
    android:layout_height="380dp"
    android:background="@drawable/shape_20"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image"
        android:layout_width="689dp"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="321dp"
        android:layout_height="match_parent"
        android:background="@drawable/shape_20_right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="42dp"
            android:layout_marginRight="22dp"
            android:textColor="#ffffffff"
            android:textSize="32sp"
            tools:text="班级运动会通知" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="19dp"
            android:textColor="#ffffffff"
            android:textSize="20sp"
            tools:text="2020.08.26" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="22dp"
            android:textColor="#ffffffff"
            android:textSize="24sp"
            tools:text="班级通知班级通知班级通知班级通知班级通知班级通知班级通知班级通知班级通知班级通知班级。" />
    </LinearLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="1920dp"
        android:layout_height="840dp"
        android:background="#20273eb0"
        android:id="@+id/login"
       >

        <android.support.constraint.ConstraintLayout
            android:layout_width="640dp"
            android:layout_height="800dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="#ffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:focusableInTouchMode="false"
            android:focusable="false"
            >


            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="69dp"
                android:layout_marginEnd="8dp"
                android:text="登录"
                android:textColor="#ff212121"
                android:textSize="50sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="13dp"
                android:text="登录之后才有权限继续操作！"
                android:textColor="#ff666666"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.492"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="82dp"
                android:layout_marginTop="247dp"
                android:text="请输入手机号"
                android:textColor="#ff212121"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <EditText
                android:id="@+id/phoneNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="83dp"
                android:maxLines="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="39dp"
                android:text="请输入验证码"
                android:textColor="#ff212121"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@+id/phoneNumber" />

            <EditText
                android:id="@+id/phoneCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="83dp"
                android:maxLines="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView8"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

            <TextView
                android:id="@+id/getPhoneCode"
                android:layout_width="150dp"
                android:layout_height="28dp"
                android:layout_marginEnd="8dp"
                android:text="获取验证码"
                android:textColor="#ff273eb0"
                android:textSize="20sp"
                android:gravity="right"
                android:focusableInTouchMode="true"
                android:focusable="true"
                app:layout_constraintBottom_toBottomOf="@+id/phoneCode"
                app:layout_constraintEnd_toEndOf="@+id/phoneCode"
                app:layout_constraintTop_toTopOf="@+id/phoneCode" />

            <TextView
                android:id="@+id/tvSure"
                android:layout_width="468dp"
                android:layout_height="64dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="105dp"
                android:layout_marginEnd="8dp"
                android:text="登录"
                android:textColor="#ffffffff"
                android:textSize="22sp"
                android:background="#273EB0"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/phoneCode" />

            <TextView
                android:id="@+id/deselect"
                android:layout_width="468dp"
                android:layout_height="64dp"
                android:layout_marginTop="18dp"
                android:text="取消"
                android:textColor="#ffcccccc"
                android:textSize="22sp"
                android:background="#ffffff"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="@+id/tvSure"
                app:layout_constraintStart_toStartOf="@+id/tvSure"
                app:layout_constraintTop_toBottomOf="@+id/tvSure" />
        </android.support.constraint.ConstraintLayout>



    </android.support.constraint.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="420dp"
    android:layout_height="413dp"
    android:id="@+id/school_info"
   >


    <ImageView
        android:id="@+id/iv_school_info"
        android:layout_width="match_parent"
        android:layout_height="226dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_school_info"
        android:layout_width="420dp"
        android:layout_height="175dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_19"
        android:textColor="#0E0067"
        android:textSize="24sp"
        android:gravity="center"
        android:maxLines="2"
        app:layout_constraintEnd_toEndOf="@+id/iv_school_info"
        app:layout_constraintStart_toStartOf="@+id/iv_school_info"
        app:layout_constraintTop_toBottomOf="@+id/iv_school_info" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="28dp"
        android:layout_height="44dp"
        android:layout_marginStart="72dp"
        android:background="@drawable/lianjie"
        app:layout_constraintBottom_toBottomOf="@+id/tv_school_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_school_info"
        app:layout_constraintVertical_bias="0.57" />

    <ImageView
        android:layout_width="28dp"
        android:layout_height="44dp"
        android:layout_marginEnd="72dp"
        android:background="@drawable/lianjie"
        app:layout_constraintBottom_toBottomOf="@+id/imageView10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView10" />

</android.support.constraint.ConstraintLayout>